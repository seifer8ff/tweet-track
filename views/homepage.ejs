<% include partials/header %>



<div class="container-fluid">
	<!-- TITLE -->
	<div class="row">
		<div class="col-xs-12">
			<h1 class="title title--highlight">Twitter Stream Visualizer</h1>
		</div>
	</div>
</div>
<div class="container">
	<!-- INFO BOXES -->
	<div class="row">
		<div class="col-xs-6">
			<label for"newKeyword" >Keyword: </label>
			<input id="newKeyword" type="text" name="newKeyword" placeholder="keyword">
