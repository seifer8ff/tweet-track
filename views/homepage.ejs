<% include partials/header %>



<div class="container-fluid container--page">
	<!-- TITLE -->
	<div class="row">
		<div class="col-xs-12">
			<h1 class="title title--highlight">Twitter Stream Visualizer</h1>
		</div>
	</div>
</div>
<div class="container">
	<!-- INFO BOXES -->
	<div class="row">
		<div class="col-md-4">
			<h4>Enter Keyword</h4>
			<input type="text" name="newKeyword" placeholder="keyword">
		</div>
		<div class="col-md-3">
			<h4>Most Recent Keywords</h4>
			<ul>
				<li>poop</li>
				<li>titties</li>
				<li>Trump</li>
			</ul>
		</div>
		<div class="col-md-5">
			<h4>Matching Tweets Per Day</h4>
			<ul>
				<li>Monday - 507</li>
				<li>Tuesday - 325</li>
				<li>Wednesday - 554</li>
				<li>Thursday - 512</li>
			</ul>
		</div>
	</div>
	<!-- STREAM  -->
	<div class="row">
		<div class="col-xs-10 col-xs-offset-1">
			<div class="stream">
				<h2 class="title">Latest Tweets with the keyword </h2>
				<div class="stream__tweets"></div>
			</div>
		</div>
	</div>
</div>
<!-- visualization  -->
<canvas id="visCanvas" resize></canvas>





