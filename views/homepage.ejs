<% include partials/header %>



<div class="container-fluid">
	<!-- TITLE -->
	<div class="row">
		<div class="col-xs-12 col--noPad">
			<h1 class="title title--highlight">Twitter Stream Visualizer</h1>
		</div>
	</div>
</div>
<div class="container">
	<!-- INFO BOXES -->
	<div class="row">
		<div class="col-xs-6">
			<div class="section section__rect">
				<form class="form-inline" action="/" method="POST">
					<div class="form-group">
						<label for"newKeyword" >Keyword: </label>
						<input  type="text" class="form-control" id="newKeyword" name="newKeyword" placeholder="keyword">
					</div>
					<button type="submit" class="btn btn-default">Update!</button>
				</form>
				<h4>Most Recent Keywords</h4>
				<ul>
					<li>poop</li>
					<li>titties</li>
					<li>Trump</li>
				</ul>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="section section__rect">
				<h4>Tweets Per Day</h4>
				<ul>
					<li>Monday - 507</li>
					<li>Tuesday - 325</li>
					<li>Wednesday - 554</li>
					<li>Thursday - 512</li>
				</ul>
			</div>
		</div>
	</div>
	<!-- STREAM + GRAPH -->
	<div class="row">
		<div class="col-sm-6">
			<div class="section section__square stream">
				<span class="gradient"></span>
				<h4 class="title">Latest Matching Tweets </h4>
				<div class="stream__container"></div>
			</div>
		</div>
		<div class="col-sm-6">
			<div class="section section__square">
				<div id="graph"></div>
			</div>
		</div>
	</div>
</div>






<% include partials/footer %>