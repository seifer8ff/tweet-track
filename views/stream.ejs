<% include partials/header %>




<div class="container">
	<!-- INFO BOXES -->
	<div class="row">
		<div class="col-xs-6">
			<div class="section section__rect">
				<form class="form-inline" action="/stream" method="POST">
					<div class="form-group">
						<label for"newKeyword" >New Hashtag: </label>
						<input  type="text" class="form-control" id="newKeyword" name="newKeyword" placeholder="nintendo">
					</div>
					<button type="submit" class="btn btn-default">Add</button>
				</form>
			</div>
		</div>
		<div class="col-xs-6">
			<div class="section section__rect">
				<p>Most tracked hashtag: Trump</p>
			</div>
		</div>
	</div>
	<!-- STREAM + GRAPH -->
	<% updatedUser.keywords.forEach(function(keyword, index) { %>
		<div class="row">
			<div class="col-sm-6">
				<div class="section section__square stream">
					<span class="gradient"></span>
					<h4 class="title">#<%= keyword %> Tweets </h4>
					<div class="stream__container"></div>
				</div>
			</div>
			<div class="col-sm-6">
				<div class="section section__square">
					<canvas class="graph"></canvas>
					<form action="/stream/<%= keyword %>?_method=DELETE" method="POST" class="remove">
                    	<button class="glyphicon glyphicon-remove"></button>
                    </form>
				</div>
			</div>
		</div>
	<% }) %>
</div>

